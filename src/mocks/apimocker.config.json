{
    "mockDirectory": "src/mocks",
    "quiet": false,
    "port": "7878",
    "latency": 50,
    "logRequestHeaders": false,
    "webServices": {
        "auth": {
            "mockFile": "auth/users.json",
            "latency": 20,
            "verbs": ["post"]
        },
        "verify": {
            "verbs": ["post"],
            "latency": 20,
            "switch": ["email"],
            "responses": {
                "post": { "httpStatus": 200, "mockFile": "auth/verify-false.json" }
            },
            "switchResponses": {
                "emailtest%40mail.com": { "httpStatus": 200, "mockFile": "auth/verify-true.json" }
            }
        },
        "sign-in": {
            "mockFile": "auth/users.json",
            "latency": 20,
            "verbs": ["post", "patch"]
        },
        "sign-out/1": {
            "httpStatus": 204,
            "latency": 20,
            "verbs": ["delete"]
        },
        "users/:id/fav-theaters": {
            "httpStatus": 200,
            "latency": 500,
            "verbs": ["get", "patch"],
            "mockFile": "theaters/fav-theaters.json"
        },
        "users/:id/fav-movies": {
            "httpStatus": 200,
            "latency": 500,
            "verbs": ["get", "patch"],
            "mockFile": "movies/fav-movies.json"
        },
        "theaters/:id": {
            "httpStatus": 200,
            "latency": 500,
            "verbs": ["get"],
            "mockFile": "theaters/theaters-1.json",
            "switch":["id"],
            "switchResponses": {
                "id10": { "httpStatus": 200, "mockFile": "theaters/theaters-10.json" },
                "id2": { "httpStatus": 200, "mockFile": "theaters/theaters-2.json" },
                "id3": { "httpStatus": 200, "mockFile": "theaters/theaters-3.json" }
            }
        },
        "theaters/:id/movies": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "theaters/theater-movies.json"
        },
        "movies/currently": {
            "httpStatus": 200,
            "latency": 400,
            "verbs": ["get"],
            "mockFile": "movies/current-movies.json"
        },
        "movies/:id": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "movies/movie-1.json",
            "switch": ["id"],
            "switchResponses": {
                "idb88f9510-d302-47d5-9d6b-8b13740f541d": { "httpStatus": 200, "mockFile": "movies/movie-2.json" }
            }
        },
        "screenings": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "screenings/movies-screenings-by-theater-id-and-day.json"
        }
    }
}
