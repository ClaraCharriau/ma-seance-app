{
  "mockDirectory": "src/mocks",
  "quiet": false,
  "port": "7878",
  "latency": 50,
  "logRequestHeaders": false,
  "webServices": {
    "auth": {
      "mockFile": "users.json",
      "latency": 20,
      "verbs": ["post"]
    },
    "verify": {
      "verbs": ["post"],
      "latency": 20,
      "switch": ["email"],
      "responses": {
        "post": {"httpStatus": 200, "mockFile": "verify-false.json"}
      },
      "switchResponses": {
        "emailtest%40mail.com": {"httpStatus": 200, "mockFile": "verify-true.json"}
      }
    },
    "sign-in": {
      "mockFile": "users.json",
      "latency": 20,
      "verbs": ["post"]
    }
  }
}
