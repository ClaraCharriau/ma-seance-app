{
    "mockDirectory": "src/mocks",
    "quiet": false,
    "port": "7878",
    "latency": 50,
    "logRequestHeaders": false,
    "webServices": {
        "auth": {
            "mockFile": "auth/users.json",
            "latency": 20,
            "verbs": ["post"]
        },
        "verify": {
            "verbs": ["post"],
            "latency": 20,
            "switch": ["email"],
            "responses": {
                "post": { "httpStatus": 200, "mockFile": "auth/verify-false.json" }
            },
            "switchResponses": {
                "emailtest%40mail.com": { "httpStatus": 200, "mockFile": "auth/verify-true.json" }
            }
        },
        "sign-in": {
            "mockFile": "auth/users.json",
            "latency": 20,
            "verbs": ["post", "patch"]
        },
        "sign-out/1": {
            "httpStatus": 200,
            "latency": 20,
            "verbs": ["delete"]
        },
        "users/:id/fav-theaters": {
            "httpStatus": 200,
            "latency": 500,
            "verbs": ["get", "patch"],
            "mockFile": "theaters/fav-theaters.json"
        },
        "users/:id/fav-movies": {
            "httpStatus": 200,
            "latency": 500,
            "verbs": ["get", "patch"],
            "mockFile": "movies/fav-movies.json"
        },
        "theaters/10": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "theaters/theaters-10.json"
        },
        "theaters/:id": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "theaters/theaters-1.json"
        },
        "movies/currently": {
            "httpStatus": 200,
            "latency": 400,
            "verbs": ["get"],
            "mockFile": "movies/current-movies.json"
        },
        "movies/:id": {
            "httpStatus": 200,
            "verbs": ["get"],
            "mockFile": "movies/movie-1.json"
        }
    }
}
